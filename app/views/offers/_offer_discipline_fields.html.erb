<div class="control-group nested-fields">
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <h3 class="panel-title">
        <%= link_to_remove_association "<i class='fa fa-times text-danger' aria-hidden='true'></i>".html_safe, f %> |
        <a role="button" data-toggle="collapse" href="#collapse" aria-expanded="false" aria-controls="collapse" class="trigger collapsed">
          Componente curricular
        </a>
      </h3>
    </div>
    <div id="collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne" aria-expanded="false" style="height: 0px;">
      <div class="panel-body">
        <div class="controls">
          <div class="row">
            <div class="col-md-9">
              <%= f.select :discipline_id, @disciplinas.collect { |c| [c.title, c.id] }, id: :grid_discipline_id, prompt: true %>
            </div>
            <div class="col-md-3">
              <%= f.select :user_id, @professores.collect { |c| [c.name, c.id] }, id: :user_id, prompt: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
